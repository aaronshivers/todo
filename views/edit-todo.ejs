<% include partials/top %>

<div class="container mt-3">

  <h1 class="text-center">Edit Todo Form</h1>

  <form class="form" action="/todos/<%= todo._id %>?_method=PATCH" method="POST">
    
    <div class="form-group">
      <label for="title">Todo</label>
      <input class="form-control" type="title" name="title" placeholder="Enter Todo..." autocomplete="title" value="<%= todo.title %>" required>
    </div>

    <div class="form-group form-check">
      <% if (todo.completed) { %> 

      <input class="form-check-input" type="checkbox" name="completed" value="false">

      <label class="form-check-label" for="completed">Mark Incomplete</label>

      <% } else { %>

      <input class="form-check-input" type="checkbox" name="completed" value="true">

      <label class="form-check-label" for="completed">Mark Completed</label>

      <% } %>

    </div>

    <a href="../" class="btn btn-lg btn-outline-primary btn-block mt-2">Go Back</a>

    <button class="btn btn-lg btn-outline-success btn-block">Edit Todo</button>

  </form>

  <form class="mt-2" id="delete" action="/todos/<%= todo._id %>?_method=DELETE" method="POST">

    <button type="submit" class="btn btn-lg btn-block btn-outline-danger">Delete Todo</button>

  </form>

</div>

<% include partials/bottom %>
